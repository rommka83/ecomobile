extend type Query {
    """
    Текущая сессия.
    Null - абонент не залогинен.
    """
    me: Session
}

"Сессия в ЛК."
type Session {
    """
    Может быть null, если по какой-то причине аккаунт для этой сессии перестал быть валиден.
    В этом случае нужно разлогинить абонента.
    """
    account: Account
}
